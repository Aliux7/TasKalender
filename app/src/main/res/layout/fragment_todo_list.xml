<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoListFragment"
    android:gravity="center"
    android:background="@color/secondary_color"
    android:paddingBottom="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary_color">

        <LinearLayout
            android:id="@+id/taskHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/task_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@color/background_color"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:orientation="vertical">

                <com.darwindeveloper.horizontalscrollmenulibrary.custom_views.HorizontalScrollMenuView
                    android:id="@+id/taskMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:icon_height="0dp"
                    app:icon_width="0dp"
                    app:item_backgroundColor="@color/background_color"
                    app:item_colorSelected="@color/accent_color"
                    app:item_marginLeft="15sp"
                    app:item_marginRight="15sp"
                    app:item_textColor="#ffffff"
                    app:item_textSize="5sp" />
            </LinearLayout>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskHeader"
            tools:listitem="@layout/todo_list_item_view"
            android:paddingHorizontal="20dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addTaskBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_add_24"
            app:backgroundTint="@color/primary_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>