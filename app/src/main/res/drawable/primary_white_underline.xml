<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shape with a solid color background -->
    <item>
        <shape>
            <solid android:color="@color/primary_color" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- White underline (adjust the height as needed) -->
    <item android:top="45dp" android:bottom="0dp" android:left="6dp">
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>